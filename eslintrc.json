{
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "env": {
        "browser": true,
        "es6": true,
        "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
   "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
       "import/extensions": [{
            "js":"never",
            "jsx":"never",
            "ts":"never",
            "tsx":"never"
           }]
   }  
}
